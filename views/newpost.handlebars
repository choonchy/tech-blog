<div class="d-flex flex-column align-items-left">
    <h2>Create new post</h2>

    <form class="form post-form">
        <div class="form-group">
            <label for="post-title">Post title:</label>
            <input class="form-control" type="text" name="title" id="post-title">
        </div>
        <div class="form-group">
            <label for="post-content">Add your message:</label>
            <textarea class="form-control" type="text" name="content" id="post-content"></textarea>
        </div>
        <button class="btn btn-info m-2" type="submit">Create post</button>
    </form>
</div>

<script src="/newPost.js"></script>