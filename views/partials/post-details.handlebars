<div class="card mb-4">
    <a href="api/posts/{{id}}">
        <div class="card-header d-flex justify-content-between align-items-center bg-info text-white">
            <h3 class="card-title p-2">{{title}}</h3>
            <div class="p-2">Posted by <a class="text-white" href="/users/{{user.username}}">{{user.username}}</a> at {{format_time createdAt}}</div>
        </div>
    </a>
        
    <div class="card-body">{{content}}</div>
</div>